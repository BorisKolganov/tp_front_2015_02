<fest:template xmlns:fest="http://fest.mail.ru"
    context_name="json">
    <div class="grid__row">
    <div class="grid__module grid__module_col_4 grid__module_span_1">
    <div class="header header-other">
        Login
    </div>
    <form method="post" class="pure-form pure-form-stacked login-form">
    	<fieldset>
            <legend></legend>
            <label for="email">Email</label>
   			<input type="email"  name="name" class="form-control login-form__email pure-form__input_email" placeholder="e-mail" required="required"/>
 			<label for="password">Password</label>
            <input type="password" name="password" placeholder="your pass" class="form-control login-form__password pure-form__input_pass" required="required"/>
            <button type="submit" class="button button_blue">
                <div class="button__text">
                <div class="button__text__1 button__text_d"></div>
                <div class="button__text__2 button__text_d"></div>
                <div class="button__text__3 button__text_d">Log in</div>
            </div>
            </button>
 		</fieldset>
 	</form>
    <a href="#registration" class="button button_blue">
        <div class="button__text">
                <div class="button__text__1 button__text_d"></div>
                <div class="button__text__2 button__text_d"></div>
                <div class="button__text__3 button__text_d">Registration</div>
            </div>
    </a><br/>
    <a href="#" class="button button_red">
        <div class="button__text">
                <div class="button__text__1 button__text_d"></div>
                <div class="button__text__2 button__text_d"></div>
                <div class="button__text__3 button__text_d">Back</div>
            </div>
    </a><br/>
    </div>
    </div>

</fest:template>