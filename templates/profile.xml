<fest:template xmlns:fest="http://fest.mail.ru"
    context_name="json">

    <div class="grid__row">
    <div class="grid__module grid__module_col_4 grid__module_span_1">
    
            <fest:choose>
                <fest:when test="json.name">
                    <div class="header header-welcome">
                        Your profile, <fest:space></fest:space><fest:value>json.name</fest:value>!
                    </div>
                    <table class="pure-table pure-table-horizontal">           
                    
                        <tr>
                            <td>Name:</td>
                            <td><fest:value>json.name</fest:value></td>
                        </tr>
                        <tr>
                            <td>Email:</td>
                            <td><fest:value>json.email</fest:value></td>
                        </tr>
                        <tr>
                            <td>id:</td>
                            <td><fest:value>json.id</fest:value></td>
                        </tr>
                    </table>
                </fest:when>
                <fest:otherwise>
                    <div class="header header-welcome">
                        Friend, please, login!
                    </div>
                </fest:otherwise>
            </fest:choose>

     
    

    <br/>
    <a href="#" class="button button_red"> 
               <div class="button__text">
                <div class="button__text__1 button__text_d"></div>
                <div class="button__text__2 button__text_d"></div>
                <div class="button__text__3 button__text_d">Back</div>
            </div>
          </a>
    </div>
    </div>
</fest:template>