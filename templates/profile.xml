<fest:template xmlns:fest="http://fest.mail.ru"
    context_name="json">

    <div class="grid__row">
    <div class="grid__module grid__module_col_4 grid__module_span_1">
    <div class="header header-welcome">
            <fest:choose>
                <fest:when test="json">
                    Your profile, <fest:space></fest:space><fest:value>json.name</fest:value>!
                </fest:when>
                <fest:otherwise>
                    Friend, please, login!
                </fest:otherwise>
            </fest:choose>
    </div>
    

    <div>



        <h3>profile</h3>
    </div>

    <div class="your-name">
        Name: <fest:value>json.name</fest:value> <br/>
        Email: <fest:value>json.email</fest:value> <br/>
        Id <fest:value>json.id</fest:value>
    </div>


    <br/>
    <a href="#" class="button button_red"> 
               <div class="button__text">
                <div class="button__text__1 button__text_d"></div>
                <div class="button__text__2 button__text_d"></div>
                <div class="button__text__3 button__text_d">Back</div>
            </div>
          </a>
    </div>
    </div>
</fest:template>