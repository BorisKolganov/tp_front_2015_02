<fest:template xmlns:fest="http://fest.mail.ru"
               context_name="json">
    <div class="grid__row">
    <div class="grid__module grid__module_col_4 grid__module_span_1"> 
    <div class="header header-other">
        Registration
    </div>
    <form method="post" class="pure-form pure-form-stacked signup-form">
        <fieldset>
            <legend></legend>
            <label for="email">Email</label>
            <input type="email" class="form-control signup-form__email pure-form__input_email" name="email" placeholder="e-mail" required="true" title="input e-mail"/>
            <label for="name">User name</label>
            <input type="text" name="name" placeholder="Your name" class="form-control signup-form__name pure-form__input_text" required="true" pattern="[A-Za-z0-9_-]+" />
            <label for="password">Password</label>
            <input type="password" name="password" placeholder="Password" required="true" class="form-control signup-form__password pure-form__input_pass"/> 
            <label for="password">Confirm password</label>
            <input type="password" placeholder="Confirm Password" required="true" class="form-control signup-form__password_confirm pure-form__input_pass"/>
            <button type="submit" class="button button_blue">
                <div class="button__text">
                <div class="button__text__1 button__text_d"></div>
                <div class="button__text__2 button__text_d"></div>
                <div class="button__text__3 button__text_d">Submit</div>
            </div>
            </button>
           </fieldset>
    </form>
    <a href="#" class="button button_blue">
        <div class="button__text">
                <div class="button__text__1 button__text_d"></div>
                <div class="button__text__2 button__text_d"></div>
                <div class="button__text__3 button__text_d">Back</div>
            </div>
    </a>
    </div>
    </div>
    
</fest:template>