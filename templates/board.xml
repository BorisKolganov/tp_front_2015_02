<fest:template xmlns:fest="http://fest.mail.ru"
    context_name="json">

    <div class="grid__row"> 
        <div class="grid__module grid__module_col_4 grid__module_span_1">
            <div class="header header-other">
                <fest:value>json.user1</fest:value>:<fest:space></fest:space><fest:value>json.score1</fest:value><br/>
            </div>
            <div class="ready button"> 
                <span>
                <span></span>
                <span></span>
                <span>Ready</span>
              </span> 
          </div>
        </div>
    </div>
    <div class="grid__row">
    <div class="grid__module grid__module_col_3 grid__module_span_3">
    <center>
    <div>
        <table class="game-board">
            <fest:for from="0" to="json.height-1" index="i">
                <tr class="game-board__row">
                    <fest:for from="0" to="json.width-1" index="j">
                        <td  class="game-board__row__cell game-board__row__cell_{json.board[i][j]}"></td>
                    </fest:for>
                </tr>
            </fest:for>
        </table>
    </div>
    </center>
    </div> 
    </div>
    <div class="grid__row">
        <div class="grid__module grid__module_col_4 grid__module_span_1">
            <div class="header header-other">
                <fest:value>json.user2</fest:value>:<fest:space></fest:space><fest:value>json.score2</fest:value>
            </div>
            <a href="#" class="button button_red"> 
                <span>
                <span></span>
                <span></span>
                <span>Back to main menu</span>
              </span> 
          </a>
        </div>
    </div>
</fest:template>